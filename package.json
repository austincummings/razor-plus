{
    "name": "razor-plus",
    "displayName": "razor-plus",
    "description": "Improved Razor support for VS Code with a mind towards Blazor",
    "version": "0.1.0",
    "publisher": "austincummings",
    "engines": {
        "vscode": "^1.21.0"
    },
    "contributes": {
        "grammars": [
            {
                "language": "razor",
                "scopeName": "text.html.cshtml",
                "path": "./syntaxes/cshtml.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    }
}